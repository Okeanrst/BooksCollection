	<dd class="hidden" data-id="<?php echo $this->formHidden($this->entity->getId()) ?>"></dd>    
	
    <dt><label for="title"><?php echo $this->translate('Title') ?></label></dt>
    <dd><?php echo $this->entity->getTitle()) ?></dd>
        
